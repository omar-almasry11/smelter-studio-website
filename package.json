{
  "name": "omar-almasry-portfolio",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development npm run watch",
    "build:css": "npx tailwindcss -i ./src/styles/input.css -o ./dist/output.css",
    "watch:css": "npx tailwindcss -i ./src/styles/input.css -o ./dist/output.css --watch",
    "build:11ty": "NODE_OPTIONS=\"--max-old-space-size=8192\" npx eleventy",
    "build:11ty:prod": "NODE_ENV=production NODE_OPTIONS=\"--max-old-space-size=8192\" npx eleventy",
    "serve:11ty": "NODE_OPTIONS=\"--max-old-space-size=8192\" npx eleventy --serve",
    "watch": "npm-run-all --parallel watch:css serve:11ty",
    "build": "npm run build:css && npm run build:11ty",
    "build:prod": "npm run build:css && npm run build:11ty:prod",
    "optimize:images": "node convert-png-to-webp.js",
    "build:optimized": "npm run optimize:images && npm run build:prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@tailwindcss/typography": "^0.5.15",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-table-of-contents": "^0.9.0",
    "prismjs": "^1.30.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.17"
  }
}

<section class="py-12 px-[5%] {{ customClasses | default: '' }}">
  <div class="container mx-auto">
    {%- if variant == 'centered' -%}
      <div class="bg-normal border border-normal rounded-lg p-8 md:p-12 text-center shadow-low dark:bg-inverted dark:border-inverted dark:shadow-lowInverted">
        {%- if ctaIcon -%}
          <div class="mb-8 flex justify-center">
            <div class="w-16 h-16 text-primary dark:text-primaryInverted">
              {{ ctaIcon }}
            </div>
          </div>
        {%- endif -%}
        <h2 class="text-3xl md:text-4xl font-bold mb-4 {% if ctaIcon %}-mt-2{% endif %}">{{ title }}</h2>
        <p class="text-lg md:text-xl text-normalLight dark:text-invertedLight mb-8 max-w-2xl mx-auto">
          {{ description }}
        </p>
        <a
          href="{{ buttonUrl }}"
          class="flex justify-center gap-2 mr-auto ml-auto px-5 py-2 bg-primary text-lg max-w-sm text-inverted text-center font-medium rounded-lg shadow-low no-underline transition duration-300 hover:bg-inverted hover:text-inverted dark:bg-primaryInverted dark:text-normal dark:hover:bg-normal dark:hover:text-normal dark:shadow-lowInverted focus:ring focus:ring-blue-300"
        >
          <span>{{ buttonText }}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            aria-hidden="true"
            focusable="false"
            width="26"
            height="26"
            fill="currentColor"
            viewBox="0 0 256 256"
          >
            <path d="M224,56l-96,88L32,56Z" opacity="0.2"></path><path d="M224,48H32a8,8,0,0,0-8,8V192a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A8,8,0,0,0,224,48Zm-96,85.15L52.57,64H203.43ZM98.71,128,40,181.81V74.19Zm11.84,10.85,12,11.05a8,8,0,0,0,10.82,0l12-11.05,58,53.15H52.57ZM157.29,128,216,74.18V181.82Z"></path>
          </svg>
        </a>
      </div>
    {%- elsif variant == 'minimal' -%}
      <div class="max-w-3xl mx-auto text-center">
        {%- if ctaIcon -%}
          <div class="flex justify-center">
            <div class="w-16 h-16 text-primary dark:text-primaryInverted">
              {{ ctaIcon }}
            </div>
          </div>
        {%- endif -%}
        <h2 class="text-3xl md:text-4xl font-bold mb-4 {% if ctaIcon %}-mt-2{% endif %}">{{ title }}</h2>
        <p class="text-lg md:text-xl text-normalLight dark:text-invertedLight mb-6">{{ description }}</p>
        <a
          href="{{ buttonUrl }}"
          class="flex mr-auto ml-auto px-5 py-2 bg-primary text-lg text-inverted font-medium rounded-lg shadow-low no-underline transition duration-300 hover:bg-inverted hover:text-inverted dark:bg-primaryInverted dark:text-normal dark:hover:bg-normal dark:hover:text-normal dark:shadow-lowInverted focus:ring focus:ring-blue-300"
        >
          <span>{{ buttonText }}</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-2 fill-current" viewBox="0 0 256 256">
            <path d="M200,64V168a8,8,0,0,1-16,0V83.31L69.66,197.66a8,8,0,0,1-11.32-11.32L172.69,72H88a8,8,0,0,1,0-16H192A8,8,0,0,1,200,64Z"></path>
          </svg>
        </a>
      </div>
    {%- else -%}
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div>
            {%- if ctaIcon -%}
              <div>
                <div class="w-16 h-16 text-primary dark:text-primaryInverted">
                  {{ ctaIcon }}
                </div>
              </div>
            {%- endif -%}
            <h2 class="text-3xl md:text-4xl font-bold mb-4 {% if ctaIcon %}-mt-2{% endif %}">{{ title }}</h2>
            <p class="text-lg md:text-xl text-normalLight dark:text-invertedLight">{{ description }}</p>
          </div>
          <div class="flex justify-start lg:justify-end">
            <a
              href="{{ buttonUrl }}"
              class="inline-flex items-center px-6 py-3 bg-primary text-lg text-inverted font-medium rounded-lg shadow-low no-underline transition duration-300 hover:bg-normalLight hover:text-normal focus:ring focus:ring-primary/30 dark:bg-primaryInverted dark:text-normal dark:hover:bg-invertedLight dark:hover:text-inverted dark:shadow-lowInverted dark:focus:ring-primaryInverted/30"
            >
              <span>{{ buttonText }}</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 ml-2 fill-current" viewBox="0 0 256 256">
                <path d="M224,48H32a8,8,0,0,0-8,8V192a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A8,8,0,0,0,224,48ZM98.71,128,40,181.81V74.19Zm11.84,10.85,12,11.05a8,8,0,0,0,10.82,0l12-11.05L203,208H53ZM157.29,128,216,74.19V181.81Z"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

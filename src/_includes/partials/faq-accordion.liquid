<section class="py-12 px-[5%] {{ customClasses | default: '' }}">
  <div class="container mx-auto max-w-4xl">
    {% if title %}
      <h2 class="text-3xl md:text-4xl font-bold mb-8">{{ title }}</h2>
    {% endif %}

    {% if faqs and faqs.size > 0 %}
      <div class="faq-accordion space-y-3" role="region" aria-label="Frequently Asked Questions">
        {% for faq in faqs %}
          <div class="faq-item">
            <button
              class="faq-trigger w-full text-left p-4 flex items-center justify-between bg-normal border border-normal rounded-lg shadow-low hover:bg-normalLight dark:bg-inverted dark:border-inverted dark:shadow-lowInverted dark:hover:bg-invertedLight transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-inset dark:focus:ring-primaryInverted"
              aria-expanded="false"
              aria-controls="faq-content-{{ forloop.index }}"
              id="faq-trigger-{{ forloop.index }}"
              type="button"
            >
              <span class="text-lg font-semibold pr-4">{{ faq.question }}</span>
              <svg
                class="faq-icon w-6 h-6 text-primary dark:text-primaryInverted transform transition-transform duration-200 flex-shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>

            <div
              class="faq-content hidden"
              id="faq-content-{{ forloop.index }}"
              aria-labelledby="faq-trigger-{{ forloop.index }}"
              role="region"
            >
              <div class="px-4 pb-4 text-normalLight dark:text-invertedLight">
                <div class="prose prose-lg max-w-none dark:prose-invert">
                  {{ faq.answer }}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="text-center text-normalLight dark:text-invertedLight">No FAQs available at this time.</p>
    {% endif %}
  </div>
</section>

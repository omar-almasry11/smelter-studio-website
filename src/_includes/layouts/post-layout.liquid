<section class="py-12 px-[5%] max-w-4xl mx-auto">
  <article class="prose">
    {{ content }}
  </article>
</section>

<script>
  //Calculates the reading time for the blog post
  document.addEventListener('DOMContentLoaded', () => {
    const readingTimeElement = document.getElementById('reading-time');
    if (readingTimeElement) {
      const blogContent = document.querySelector('article').innerText;
      const words = blogContent.trim().split(/\s+/).length;
      const wordsPerMinute = 200;
      const readingTime = Math.round(words / wordsPerMinute);
      readingTimeElement.textContent = readingTime;
    }
  });

  // Copies the current page link to the clipboard
  function copyToClipboard() {
    // Use the full URL of the current page
    const fullUrl = window.location.href;
    navigator.clipboard.writeText(fullUrl)
      .then(() => {
        const copyTextElement = document.getElementById('copy-link-text');
        if (copyTextElement) {
          // Change text to "Link Copied!"
          copyTextElement.innerText = 'Link Copied!';
          // Revert text back to "Copy Link" after 1.4 seconds
          setTimeout(() => {
            copyTextElement.innerText = 'Copy Link';
          }, 1400);
        }
      })
      .catch((err) => {
        console.error('Failed to copy link:', err);
      });
  }

  // Attach the function to the global window so inline handlers can see it.
  window.copyToClipboard = copyToClipboard;
</script>